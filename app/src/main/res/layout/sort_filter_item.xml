<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_grey_blue_two"/>

    <LinearLayout
        android:id="@+id/sortActItemLayout"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageButton
            android:layout_marginLeft="8.2dp"
            android:id="@+id/sortActItemBtn"
            android:background="@null"
            android:src="@drawable/v"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
            android:id="@+id/sortActItemTitle"
            android:textSize="14.4sp"
            android:layout_marginLeft="16.1dp"
            android:textColor="@color/dark_grey_blue_two"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="2.9sp"
            android:text="Z-A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/sortActItemDirectionLayout"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:text="ASC"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginRight="5dp"
                android:id="@+id/sortActItemDirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:rotation="180"
                android:tint="@color/black"
                android:id="@+id/sortActItemArrow"

                android:background="@color/transparent"
                android:src="@drawable/arrow_red_copy_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>
</FrameLayout>