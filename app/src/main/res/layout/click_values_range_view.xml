<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layoutDirection="ltr"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
            android:textSize="14.4sp"
            android:textColor="@color/dark_grey_blue_two"
            android:text="Rooms (min)"
            app:fontType="MULI_BOLD"
            android:id="@+id/clickValuesRangeViewTitle"
            android:paddingLeft="2dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="25.9dp"
            android:drawableLeft="@drawable/shape_crcle_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingRight="4.8dp"
            android:layout_marginTop="13.2dp"
            android:layout_marginBottom="16.4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="32.6dp">

                <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="13.5sp"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/shape_white_sqr_blue_stroke"
                    android:id="@+id/clickValuesRangeViewMinus"
                    android:textColorHint="@color/dark_grey_blue_two"
                    android:text="-"
                    app:fontType="MULI_BOLD"
                    android:layout_width="30.6dp"
                    android:layout_height="wrap_content" />

                <sold.monkeytech.com.sold_android.ui.fontable_views.FontableEditText
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="13.5sp"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/shape_white_sqr_blue_stroke"
                    android:id="@+id/clickValuesRangeViewInput"
                    android:textColorHint="@color/dark_grey_blue_two"
                    android:hint="No min"
                    app:fontType="MULI_REG"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content" />

                <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="13.5sp"
                    android:imeOptions="actionNext"
                    android:lines="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/shape_white_sqr_blue_stroke"
                    android:id="@+id/clickValuesRangeViewPlus"
                    android:textColorHint="@color/dark_grey_blue_two"
                    android:text="+"
                    app:fontType="MULI_BOLD"
                    android:layout_width="30.6dp"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</layout>