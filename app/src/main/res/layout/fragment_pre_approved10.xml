<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layoutDirection="ltr"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginRight="14.5dp"
            android:layout_marginLeft="14.5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:gravity="center"
                android:layout_marginTop="17.7dp"
                android:textSize="12.5sp"
                android:textColor="#80000000"
                android:text="Step 10/11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:layout_marginTop="9.5dp"
                android:background="@drawable/shape_sqr_dark_grey_30"
                android:layout_width="match_parent"
                android:layout_height="3.5dp">

                <ImageView
                    android:src="@drawable/shape_sqr_dark_grey"
                    android:layout_width="298.7dp"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:layout_marginTop="68dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20.2sp"
                app:fontType="MULI_EX_BOLD"
                android:layout_gravity="center"
                android:textColor="@color/dark_grey_blue_two"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="4.8sp"
                android:gravity="center_horizontal"
                android:text="Fixed expenses:"/>

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:layout_marginTop="58.3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.4sp"
                android:textColor="#80000000"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="8.6sp"
                android:gravity="center_horizontal"
                android:text="FIXES EXPENSES"/>

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableEditText
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                app:fontType="MULI_BOLD"
                app:backgroundTint="@color/black"
                android:id="@+id/preApproved10ActInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:layout_marginBottom="26.5dp"
                android:text="NEXT"
                app:fontType="MULI_BOLD"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/preApproved10ActNext"
                android:background="@drawable/shape_sqr_red"
                android:layout_width="match_parent"
                android:layout_height="43.2dp"/>


        </LinearLayout>

    </LinearLayout>

</layout>
