<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/featureItemLayout"
        android:layoutDirection="ltr"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="10.6dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:id="@+id/featureItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                app:fontType="MULI_BOLD"
                android:textColor="@color/scarlet"
                tools:text="â€¢ Bedrooms"/>

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:id="@+id/featureItemValue"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="@color/dark_grey_blue_two"
                tools:text="Beds Total:2, Bedrooms Description: Entry Level"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:clipToPadding="true"
            android:id="@+id/featureItemList"
            android:layout_width="match_parent"
            android:layout_height="70.6dp"/>
    </LinearLayout>


</layout>