<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layoutDirection="ltr"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="3.8dp"
                android:layout_marginRight="3.8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontType="MULI_BOLD"
                    android:textSize="13.4sp"
                    android:textColor="@color/scarlet"
                    android:text="Mortgage calculator"/>

                <View
                    android:layout_marginTop="16.1dp"
                    android:background="@color/dark_grey_blue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <sold.monkeytech.com.sold_android.ui.custom_views.SeekBarView
                    android:id="@+id/calcActLoanAmountBar"
                    android:layout_marginTop="13.4dp"
                    app:title="Loan amount"
                    app:max="4000000"
                    app:withInput="true"
                    app:inputType="$"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="16.1dp"
                    android:background="@color/dark_grey_blue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <sold.monkeytech.com.sold_android.ui.custom_views.SeekBarView
                    android:id="@+id/calcActLoanTermBar"
                    android:layout_marginTop="13.4dp"
                    app:title="Loan amount"
                    app:max="40"
                    app:withInput="true"
                    app:inputType="years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginTop="16.1dp"
                    android:background="@color/dark_grey_blue"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <sold.monkeytech.com.sold_android.ui.custom_views.SeekBarView
                    android:id="@+id/calcActLoanIntrestBar"
                    android:layout_marginTop="13.4dp"
                    app:title="Loan amount"
                    app:max="100"
                    app:withInput="true"
                    app:inputType="%"
                    app:isDecimal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <FrameLayout
                android:layout_marginLeft="3.8dp"
                android:layout_marginRight="3.8dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/architecture_1909673_copy_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/red_to_purple_gardiant_rect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                            android:textSize="28.8sp"
                            android:textColor="@color/white"
                            android:lineSpacingExtra="11.3sp"
                            android:gravity="center_horizontal"
                            android:text="$ 52 036"
                            app:fontType="MULI_EX_BOLD"
                            android:layout_marginTop="37.1dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.9sp"
                            android:layout_marginTop="11dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:letterSpacing="0.04"
                            android:lineSpacingExtra="20.2sp"
                            android:gravity="center_horizontal"
                            android:text="Monthly Payment"/>

                        <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                            android:layout_width="match_parent"
                            android:layout_marginRight="14dp"
                            android:layout_marginLeft="14dp"
                            android:layout_marginBottom="22.1dp"
                            android:layout_height="40.8dp"
                            android:textSize="14.4sp"
                            android:background="@drawable/shape_white_sqr_blue_stroke_rounded"
                            android:layout_marginTop="24.4dp"
                            android:textColor="@color/scarlet"
                            android:letterSpacing="-0.02"
                            app:fontType="MULI_BOLD"
                            android:lineSpacingExtra="-1.4sp"
                            android:gravity="center"
                            android:text="Get Pre-Approved"/>

                    </LinearLayout>

                    <View
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="3.4dp"/>

                    <LinearLayout
                        tools:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingLeft="18dp"
                            android:background="@color/dark_grey_blue_two"
                            android:orientation="vertical"
                            android:layout_width="195.4dp"
                            android:layout_height="match_parent">

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13.4sp"
                                android:layout_marginTop="19.1dp"
                                android:textColor="@color/white"
                                app:fontType="MULI_BOLD"
                                android:text="Tax calculator *"/>

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.5sp"
                                android:layout_marginTop="22.7dp"
                                android:drawablePadding="7.7dp"
                                android:drawableLeft="@drawable/shape_sqr_white"
                                android:textColor="@color/white"
                                android:text="Single asset"/>

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.5sp"
                                android:layout_marginBottom="29.1dp"
                                android:layout_marginTop="16.7dp"
                                android:drawablePadding="7.7dp"
                                android:drawableLeft="@drawable/shape_sqr_white"
                                android:textColor="@color/white"
                                android:text="Addition asset"/>

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="start|center"
                                android:src="@drawable/shape_triangle"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:text="3.5%"
                                android:layout_gravity="center"
                                android:textSize="28.8sp"
                                android:textColor="@color/white"
                                android:lineSpacingExtra="3.1sp"
                                android:gravity="center_horizontal"
                                app:fontType="MULI_EX_BOLD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="3.4dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingLeft="18dp"
                            android:background="@color/dark_grey_blue_two"
                            android:orientation="vertical"
                            android:layout_width="195.4dp"
                            android:layout_height="wrap_content">

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13.4sp"
                                android:layout_marginTop="19.1dp"
                                android:textColor="@color/white"
                                app:fontType="MULI_BOLD"
                                android:text="Yield calculator **"/>

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11.5sp"
                                android:layout_marginTop="12.7dp"
                                android:textColor="@color/white"
                                android:text="Monthly rent fee"/>

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableEditText
                                android:background="@color/white"
                                android:paddingLeft="9.4dp"
                                android:layout_marginBottom="28.8dp"
                                android:textSize="11.5sp"
                                android:layout_marginTop="9.3dp"
                                android:textColor="@color/dark_grey_blue_two"
                                android:layout_width="105.1dp"
                                android:layout_height="26.4dp" />

                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="start|center"
                                android:src="@drawable/shape_triangle"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />

                            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                                android:text="3.5%"
                                android:layout_gravity="center"
                                android:textSize="28.8sp"
                                android:textColor="@color/white"
                                android:lineSpacingExtra="3.1sp"
                                android:gravity="center_horizontal"
                                app:fontType="MULI_EX_BOLD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:textSize="10.6sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="12.3dp"
                android:textColor="@color/dark_grey_blue_two"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6.5sp"
                android:text="* The calculator will present the results in accordance with the asset price and the amount of assets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:textSize="10.6sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="16.7dp"
                android:layout_marginBottom="24.7dp"
                android:textColor="@color/dark_grey_blue_two"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6.5sp"
                android:text="* Calculation: monthly rent cost * 12 / appartment cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>



</layout>
