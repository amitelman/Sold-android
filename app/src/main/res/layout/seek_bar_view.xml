<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout

        android:layoutDirection="ltr"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableTextView
                android:id="@+id/seekBarViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan amount"
                android:textColor="@color/dark_grey_blue_two"
                android:textSize="15.4sp"
                app:fontType="MULI_BOLD" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <sold.monkeytech.com.sold_android.ui.fontable_views.FontableEditText
                android:inputType="number"
                android:id="@+id/seekBarViewInput"
                android:layout_width="120dp"
                android:layout_height="29.8dp"
                android:background="@drawable/shape_white_sqr_blue_stroke_semi_rounded"
                android:gravity="center"
                android:lineSpacingExtra="6.9sp"
                android:textColor="@color/dark_grey_blue"
                android:textSize="15.4sp"
                tools:text="$ 2 020 589" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/seekBarViewBar"
            android:layout_width="match_parent"
            android:layout_height="35.5dp"
            android:layout_marginTop="12.5dp"
            android:max="4000000"
            android:progress="50"
            android:progressBackgroundTint="@color/dark_grey_blue"
            android:progressTint="@color/scarlet"
            android:thumb="@drawable/seek_bar_thumb" />

    </LinearLayout>

</layout>