<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/scarlet</item>
        <item name="android:textColor">@color/dark_grey_blue_two</item>
        <item name="android:focusedMonthDateColor">@color/scarlet</item>
        <item name="android:weekSeparatorLineColor">@color/scarlet</item>
        <item name="android:selectedWeekBackgroundColor">@color/black</item>
    </style>

    <style name="CalendarViewMonth" parent="Theme.AppCompat">
        <item name="android:textColor">@color/scarlet</item>
        <item name="android:selectedWeekBackgroundColor">@color/white</item>
    </style>

    <style name="CalendarViewWeekDays">
        <item name="android:textColor">@color/black</item>
    </style>

    <style parent="@android:style/Widget.Spinner" name="SpinnerwithNoArrow">
        <item name="android:background">@android:drawable/edit_text</item>
    </style>


</resources>


